<Window x:Class="Mon_Player_Audio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mon_Player_Audio"
        mc:Ignorable="d"
        Title="Mon Player Audio" Height="400" Width="700">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.15"/>
            <GradientStop Color="#FF00FFF9" Offset="0.9"/>
        </LinearGradientBrush>
    </Window.Background>
    <WrapPanel>
        
        <TextBox Name="FilmePath" Width="150" Height="30" Text="Ouvir un fichier mp3..." Margin="20"/>
        
        <Button Name="OpenFile" Content="Ouvrir" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="25" Click="OpenFile_Click" Foreground="White" FontWeight="Bold" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFE400FD" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        
    </WrapPanel>



</Window>
